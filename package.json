{
    "name": "latte-carousel",
    "version": "1.5.2",
    "description": "LatteCarousel is a lightweight and responsive carousel.",
    "repository": "https://github.com/latte-carousel/latte-carousel.git",
    "author": {
        "name": "LatteCarousel",
        "url": "https://latte-carousel.github.io"
    },
    "license": "MIT",
    "private": false,
    "main": "dist/latte-carousel.min.js",
    "types": "dist/lib/index.d.ts",
    "keywords": [
        "carousel",
        "responsive",
        "javascript",
        "slider",
        "typescript"
    ],
    "homepage": "https://lattecarousel.dev",
    "scripts": {
        "build": "webpack",
        "watch": "webpack --watch",
        "serve": "http-server \"./\"",
        "test": "jest",
        "format": "yarn run format:prettier && yarn run format:csscomb",
        "format:prettier": "prettier --find-config-path --write \"./src/**\" \"./test/**\" \"./example/**\"",
        "format:csscomb": "csscomb \"./src/scss\" \"./example\"",
        "lint": "yarn run lint:tslint && yarn run lint:eslint",
        "lint:tslint": "tslint -c \"tslint.json\" \"./**/*.ts\"",
        "lint:eslint": "eslint \"./**/*.js\""
    },
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "autoprefixer": "^9.5.0",
        "clean-webpack-plugin": "^2.0.1",
        "css-loader": "^2.1.1",
        "csscomb": "^4.2.0",
        "cssnano": "^4.1.10",
        "eslint": "^5.15.2",
        "http-server": "^0.11.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.5.0",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "prettier": "1.16.4",
        "sass-loader": "^7.1.0",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "tslint": "^5.14.0",
        "typescript": "^3.3.3333",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    }
}
